@{
}

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
@if(ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
} else
{
    <table>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
        @foreach (KeyValuePair<string, string> evt in ViewBag.events)
        {
            <tr>
                <td>@evt.Key</td>
                <td>@evt.Value</td>
            </tr>
        }
    </table>
}