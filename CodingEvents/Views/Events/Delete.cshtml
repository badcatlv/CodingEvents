@{
}
<h1>Delete Event</h1>
<form method="post"> 
    @foreach(var evt in ViewBag.events)
    {
        <div class="form-control">
            <label>
                <span>@evt.Name</span>
                <input type="checkbox" name="eventIds" value="@evt.ID" />
            </label>
        </div>
    }
    <input type="submit" value="Delete selected" class="btn btn-danger" />
</form>